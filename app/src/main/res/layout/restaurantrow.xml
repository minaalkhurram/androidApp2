<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ratingsTxt"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:background="@color/greyBlue"
            android:text="Ratings"
            android:textAlignment="center"
            android:textColor="@color/white">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resNametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/profileicon"
                android:drawablePadding="20dp"
                android:fontFamily="monospace"

                android:text="Restuarant Name"
                android:textSize="16sp"
                android:typeface="monospace">

            </TextView>

            <TextView
                android:id="@+id/locationtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/locationicon"
                android:drawablePadding="20dp"
                android:fontFamily="monospace"

                android:text="Location "
                android:textSize="14sp"
                android:typeface="monospace">

            </TextView>

            <TextView
                android:id="@+id/phonetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableStart="@drawable/phoneicon"
                android:drawablePadding="20dp"
                android:fontFamily="monospace"
                android:text="Phone number"
                android:textSize="14sp"
                android:typeface="monospace">

            </TextView>

            <TextView
                android:id="@+id/desctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/descicon"
                android:drawablePadding="20dp"
                android:fontFamily="monospace"
                android:text="Description"
                android:textSize="14sp"
                android:typeface="monospace">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/call_icon"

                >

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/commenticon"

                >

            </ImageView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>